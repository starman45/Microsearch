<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="frist_header" inherit_id="website.layout" name="Template Header Sidebar" active="False">
        <xpath expr="//header//nav" position="replace">
            <div class="gem_auto_parts_theme_header_1">
                <div class="upper_detalis_section">
                    <div class="col-lg-6">
                        <ul style="list-style:none; padding:0px; display: flex; align-items: center;">
                            <li>
                                <a href="#">
                                    <span>Shipping</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span>FAQ</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span>Contact</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span>Track Order</span>
                                </a>
                            </li>

                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <div class="followus_gem" style="display:flex; float:right;">
                            <span>Follow Us:</span>
                            <div class="social_media" style="margin-left:20px;">
                                <i class="fa fa-facebook"></i>
                                <i class="fa fa-twitter"></i>
                                <i class="fa fa-instagram"></i>
                                <i class="fa fa-youtube-play"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <nav class="navbar_hd_5">
                    <div class="navbar-container_hd_5_new_ecom container">
                        <input type="checkbox" id="nav-toggle"/>
                        <label for="nav-toggle" class="icon-burger">
                            <div class="line"></div>
                            <div class="line"></div>
                            <div class="line"></div>
                        </label>
                        
                        <ul class="links" id="leble_header_them_5">
                            <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                <t t-call="website.submenu">
                                    <t t-set="item_class" t-valuef="nav-item"/>
                                    <t t-set="link_class" t-valuef="nav-link"/>
                                </t>
                            </t>
                        </ul>
                        <div class="other_btn_hd_5_icon" style="display: flex;">
                            <t t-call="portal.placeholder_user_sign_in">
                                <t t-set="_item_class" t-valuef="nav-item ml-3"/>
                                <t t-set="_link_class" t-valuef="nav-link"/>
                            </t>
                            <t t-call="portal.user_dropdown">
                                <t t-set="_icon" t-value="true"/>
                                <t t-set="_item_class" t-valuef="nav-item dropdown ml-3"/>
                                <t t-set="_link_class" t-valuef="nav-link"/>
                                <t t-set="_dropdown_menu_class" t-valuef="position-absolute dropdown-menu-right"/>
                            </t>
                            <t t-call="website_sale.header_cart_link">
                                <t t-set="_icon" t-value="True"/>
                                <t t-set="_item_class" t-value="'nav-item mx-lg-3'"/>
                                <t t-set="_link_class" t-value="'nav-link'"/>
                            </t>
                            <!-- Wishlist -->
                            <t t-call="website_sale_wishlist.header_wishlist_link">
                                <t t-set="_icon" t-value="True"/>
                                <t t-set="_item_class" t-value="'nav-item mr-lg-3'"/>
                                <t t-set="_link_class" t-value="'nav-link'"/>
                            </t>
                        </div>
                    </div>
                </nav>
            </div>
        </xpath>
    </template>
</odoo>
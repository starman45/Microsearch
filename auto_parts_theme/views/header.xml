<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="geminate_auto_parts_header" inherit_id="website.snippet_options">
       <xpath expr="//div/we-select/we-button[@data-name='header_default_opt']" position="after">
        <we-button title="geminate auto auto_parts_theme Header"
                   data-customize-website-views="auto_parts_theme.geminate_header0"
                   data-customize-website-variable="'default_header'"
                   data-img="/website/static/src/img/snippets_options/header_template_default.svg"/>
       </xpath> 
    </template>
    <template id="geminate_header0" inherit_id="website.template_header_default" name='Geminate Header'>
        <xpath expr="//t[@t-call='website.navbar']" position="replace">
            <div class="site-navigation main_header_auto_parts_theme">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <nav class="navbar navbar-expand-lg navbar-dark p-0 header_auto_parts">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                                    <label for="nav-toggle" class="icon-burger">
                                        <img src="https://cdn-icons-png.flaticon.com/512/5259/5259008.png" style="width:40px;"/>
                                    </label>
                                </button>
                                <input type="checkbox" id="nav-toggle"/>
                                <div class="logo">
                                    <img src="/auto_parts_theme/static/src/img/header/geminate_logo.png" class="img-fluid" style="width:180px;" />
                                </div>
                                <div class="collapse navbar-collapse list_food_nav" id="collapsibleNavbar">
                                    <t t-call="website.navbar_nav">
                                        <t t-set="_nav_class" t-valuef="flex-grow-1"/>
                                        <!-- Menu -->
                                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                            <t t-call="website.submenu">
                                                <t t-set="item_class" t-valuef="nav-item"/>
                                                <t t-set="link_class" t-valuef="nav-link"/>
                                            </t>
                                        </t>
                                        <!-- Sign In -->
                                        <t t-call="portal.placeholder_user_sign_in">
                                            <t t-set="_item_class" t-valuef="nav-item ml-lg-auto"/>
                                            <t t-set="_link_class" t-valuef="nav-link font-weight-bold"/>
                                        </t>
                                        <!-- User Dropdown -->
                                        <t t-call="portal.user_dropdown">
                                            <t t-set="_user_name" t-value="true"/>
                                            <t t-set="_item_class" t-valuef="nav-item dropdown ml-lg-auto"/>
                                            <t t-set="_link_class" t-valuef="nav-link font-weight-bold"/>
                                        </t>
                                        <!-- Cart -->
                                        <t t-call="website_sale.header_cart_link">
                                            <t t-set="_icon" t-value="True"/>
                                            <t t-set="_item_class" t-value="'nav-item mx-lg-3'"/>
                                            <t t-set="_link_class" t-value="'nav-link'"/>
                                        </t>
                                        <!-- Wishlist -->
                                        <t t-call="website_sale_wishlist.header_wishlist_link">
                                            <t t-set="_icon" t-value="True"/>
                                            <t t-set="_item_class" t-value="'nav-item mr-lg-3'"/>
                                            <t t-set="_link_class" t-value="'nav-link'"/>
                                        </t>
                                    </t>
                                    <!-- Language Selector -->
                                    <t t-call="website.placeholder_header_language_selector">
                                        <t t-set="_div_classes" t-valuef="my-auto ml-lg-2"/>
                                    </t>
                                </div> 
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>